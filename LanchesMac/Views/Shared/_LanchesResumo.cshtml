@model Lanche

<div class="col-sm-4 col-md-4 col-lg-4 todos-lanches">

    <p><img src="@Model.ImagemUrl" class="img-fluidS" /></p>
    <h3>Preço: @Model.Preco.ToString("C")</h3>
    <a asp-controller="Lanches" asp-action="Details"
    asp-route-lancheId="@Model.LancheId">@Model.Nome</a>
    <p>@Model.DescricaoCurta</p>

    <div>
        <p class="button">
            <a class="btn btn-primary" id="cardButton" asp-controller="CarrinhoCompra"
               asp-action="AdicionarNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">Incluir no Carrinho</a>
        </p>
    </div>
</div>
