<table id="formatarTabela">
    <tr >
        <td>
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="UploadFiles">
                <img src="~/images/upload2.png" width="200" height="150" />

                <div class="form-group">
                    <div class="col-md-">
                        <p><b>Selecione um ou mais arquivos para enviar: </b></p>
                        <p>(Arquivos com o mesmo nome serão Sobreescritos)</p>
                        <input type="file" name="files" multiple class="button btn-primary pe-lg-1" />
                    </div>
                </div>
                <hr class="w-50"/>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Enviar Arquivo(s)" class="btn btn-outline-primary" />
                    </div>
                </div>
            </form>
        </td>
        <td class="align-content-end">
            <form class="" method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="GetImagens">
                <img src="~/images/visualizar1.jpg" width="200" height="200" />
                <div class="col-md-10">
                    <p><strong>Vizualizar Arquivos no servidor</strong></p>
                </div>
                <hr/>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Vizualuzar Arquivos no servidor" class="btn btn-outline-primary" />
                    </div>
                </div>
            </form>
        </td>
    </tr>
</table>
<div class="container">
    @if(ViewData["Deletado"] != null)
    {
        <li>@ViewData["Deletado"]</li>
        <!--exibe o nome do arquivo deletado-->
    }
</div>